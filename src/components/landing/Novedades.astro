---
import novedades from "../../config/novedades.json";
---
<h1 class="text-center font-bold text-5xl mt-10 mb-4">Features</h1>

<div class="grid md:grid-cols-3 gap-4 p-4 md:p-0">
      {
        novedades.map(nov =>{
            return <div class="bg-slate-800 p-10 rounded-xl">
            <h2 class="text-2xl font-bold my-4">{nov.title}</h2>
            <p>{nov.description}</p>
        </div>
        })
      }
</div>